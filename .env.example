# Tradier API Configuration
TRADIER_API_KEY=your_sandbox_api_key_here
TRADIER_API_URL=https://sandbox.tradier.com/v1
# When you get brokerage account, switch to:
# TRADIER_API_URL=https://api.tradier.com/v1

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Twilio Configuration (for SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
ALERT_RECIPIENT_PHONE=+1234567890

# Signal Detection Thresholds
MIN_PREMIUM=25000
MIN_VOLUME_OI_RATIO=3.0
MIN_ABSOLUTE_VOLUME=100
MAX_DTE=45
MIN_OTM_PERCENT=10

# Scanning Configuration
SCAN_INTERVAL_MS=60000
# Scanner interval in milliseconds (60000 = 1 minute)

# Environment
NODE_ENV=development
